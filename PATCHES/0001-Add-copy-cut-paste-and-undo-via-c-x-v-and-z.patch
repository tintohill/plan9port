Date: Fri, 28 Nov 2014 15:06:26 -0500
Subject: [PATCH] Add copy, cut, paste, and undo via ^c, ^x, ^v, and ^z.

---
 src/cmd/acme/text.c | 4 ++++
 1 file changed, 4 insertions(+)

diff --git a/src/cmd/acme/text.c b/src/cmd/acme/text.c
index 7634d92..62ec21f 100644
--- a/src/cmd/acme/text.c
+++ b/src/cmd/acme/text.c
@@ -749,10 +749,12 @@ texttype(Text *t, Rune r)
 			q0++;
 		textshow(t, q0, q0, TRUE);
 		return;
+	case 3:		/* ^C: copy */
 	case Kcmd+'c':	/* %C: copy */
 		typecommit(t);
 		cut(t, t, nil, TRUE, FALSE, nil, 0);
 		return;
+	case 0x1a:	/* ^Z: undo */
 	case Kcmd+'z':	/* %Z: undo */
 	 	typecommit(t);
 		undo(t, nil, nil, TRUE, 0, nil, 0);
@@ -781,6 +783,7 @@ texttype(Text *t, Rune r)
 	}
 	/* cut/paste must be done after the seq++/filemark */
 	switch(r){
+	case 0x18:	/* ^X: cut */
 	case Kcmd+'x':	/* %X: cut */
 		typecommit(t);
 		if(t->what == Body){
@@ -791,6 +794,7 @@ texttype(Text *t, Rune r)
 		textshow(t, t->q0, t->q0, 1);
 		t->iq1 = t->q0;
 		return;
+	case 0x16:	/* ^V: paste */
 	case Kcmd+'v':	/* %V: paste */
 		typecommit(t);
 		if(t->what == Body){
